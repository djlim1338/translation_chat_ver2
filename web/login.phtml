    <script language="javascript">
        const inputId = document.getElementById("username");
        const inputPw = document.getElementById("password");
        const joinForm = document.getElementById("joinForm");

        function btn_login() {
            const inputIdValue = inputId.value;
            const inputPwValue = inputPw.value;
            
            if(inputIdValue == '' || inputIdValue == null){
                alert("사용자 이름을 입력하세요.");
                inputId.focus();
                return;
            }

            if(inputPwValue == '' || inputPwValue == null){
                alert("비밀번호를 입력해주세요.");
                inputPw.focus();
                return;
            }

            joinForm.submit();
        }

        function go_main() {
            location.href = "./main.phtml";
        }

        document.addEventListener("keydown", (e) => {
            if(e.key == "Enter" || e.keyCode == "13"){
                btn_login();
            }
        })
    </script>
